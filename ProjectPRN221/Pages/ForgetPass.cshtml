@page
@model ProjectPRN221.Pages.ForgetPassModel
@{
}
<div class="isolate bg-white px-6 py-24 sm:py-32 lg:px-8">
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Forget Password</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        @if (ViewData["phone"] == null)
        {

            <form class="space-y-6" method="POST">
                <div>
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Phone Number</label>
            <div class="mt-2">
                <input asp-for="Phone" id="phone" name="Phone" type="phone" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
            </div>
            @if (ViewData["checkPhone"] != null)
            {
                <span style="margin-bottom: 10px; text-align:center;" class="block w-full items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20 show">Phone number is not exist</span>
            }
        </div>

        <div>
            <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Reset Password</button>
        </div>
        </form>
        }
        else
        {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                countdown();
            });</script>
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
            <div class="sm:flex sm:items-start">
                <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">A OTP code sent to your phone number.Please enter OTP code.</p>
                    </div>
                    <input type="text" name="otp" id="otp" autocomplete="family-name" class="block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <button class="mt-3" id="countdownButton">Timeout:</button>
                    <span id="countdownDisplay"></span>
                </div>
            </div>
        </div>
        <div style="display:none; text-align:center;" id="infor" class="alert alert-danger" role="alert">Wrong OTP. Let's check OTP code again.</div>
        <div>
            <button type="button" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Send OTP</button>
        </div>
        }
    </div>
</div>
</div>
<script>
    function countdown() {
        var seconds = 120;
        var countdownDisplay = document.getElementById("countdownDisplay");

        var countdownInterval = setInterval(function () {
            if (seconds === 0) {
                clearInterval(countdownInterval);
                countdownDisplay.textContent = "Đếm ngược đã đạt đến 0 giây";
                var modal = document.getElementById("model");
                modal.style.display = "none";
            } else {
                countdownDisplay.textContent = seconds;
                seconds--;
            }
        }, 1000);
    }

    var button = document.getElementById("countdownButton");
    button.addEventListener("click", countdown);
</script>